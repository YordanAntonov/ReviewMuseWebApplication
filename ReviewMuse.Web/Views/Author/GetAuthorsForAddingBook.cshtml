@model IEnumerable<ExpoAuthorForAddingNewBookView>

@{
    ViewData["Title"] = "Select Author - ReviewMuse";
}

<div class="container-fluid">

    <h2 class="authorsHeader1">Select Author for your book </h2>

    <div class="container">
        <div class="row">
            @foreach (var author in Model)
            {
                <div class="col-md-4 mb-4">
                    <div class="cardAuthor">
                        <img class="card-img-top author-img2" src="@author.ImageUrl" alt="Author Image">
                        <div class="card-body">
                            <h5 class="card-title">@author.AuthorName</h5>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</div>
