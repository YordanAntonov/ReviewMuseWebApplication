@model ImpoNewCategoryViewModel
@{
    ViewData["Title"] = "Add Ganre - ReviewMuse";
}

<div class="container-fluid addGanreForm">
    <h2 style="margin-left:500px">Add new Ganre</h2>
    <form asp-controller="Categories" asp-action="AddCategory" method="post">
        <div class="form-row align-items-center">
            <div class="form-group">
                <div class="col-md-5">
                    <label asp-for="CategoryName">Ganre Name</label>
                    <input asp-for="CategoryName" class="form-control" />
                    <span asp-validation-for="CategoryName" class="text-danger"></span>
                </div>
                <div class="col-md-5">
                    <div class="form-group">
                        <label asp-for="Description">Category Description</label>
                        <textarea asp-for="Description" class="form-control" required></textarea>
                        <span asp-validation-for="Description" class="text-danger"></span>
                    </div>
                </div>
            </div>
            <div class="col-auto">
                <button type="submit" class="btn btn-primary">Add</button>
            </div>
        </div>
    </form>
</div>