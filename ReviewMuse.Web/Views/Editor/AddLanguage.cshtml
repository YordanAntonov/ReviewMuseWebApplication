@model ImpoLanguageViewModel

@{
    ViewData["Title"] = "Add Language - ReviewMuse";
}

<div class="container-fluid addLanguageForm">
    <h2 style="margin-left:60px">Add new Language</h2>
    <form asp-controller="Editor" asp-action="AddLanguage" method="post">
        <div class="form-row align-items-center">
            <div class="form-group">
                <div class="col-md-5">
                    <label asp-for="LanguageName">Language Name</label>
                    <input asp-for="LanguageName" class="form-control" />
                    <span asp-validation-for="LanguageName" class="text-danger"></span>
                </div>
            </div>
            <div class="col-auto">
                <button type="submit" class="btn btn-primary">Add</button>
            </div>
        </div>
    </form>
</div>