@page
@model RegisterModel
@{
    ViewData["Title"] = "Register";
}
<br/>
<br/>
<h1 class="row d-flex align-items-center justify-content-center text-center">@ViewData["Title"]</h1>

<div class="row text-center">
    <div class="col-md-6 col-md-offset-3">
        <form id="registerForm" asp-route-returnUrl="@Model.ReturnUrl" method="post">
            <h2 class="row d-flex align-items-center justify-content-center">Create a new account.</h2>
            <hr />
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-floating mb-2">
                <label asp-for="Input.Username"></label>
                <input asp-for="Input.Username" class="form-control" style="background-color:wheat" autocomplete="username" aria-required="true" />
                <span asp-validation-for="Input.Username" class="text-danger"></span>
            </div>
            <div class="form-floating mb-2">
                <label asp-for="Input.Email"></label>
                <input asp-for="Input.Email" class="form-control" style="background-color:wheat" autocomplete="email" aria-required="true" />
                <span asp-validation-for="Input.Email" class="text-danger"></span>
            </div>
            <div class="form-floating mb-2">
                <label asp-for="Input.Password"></label>
                <input asp-for="Input.Password" class="form-control" style="background-color:wheat" autocomplete="new-password" aria-required="true" />
                <span asp-validation-for="Input.Password" class="text-danger"></span>
            </div>
            <div class="form-floating mb-5">
                <label asp-for="Input.ConfirmPassword"></label>
                <input asp-for="Input.ConfirmPassword" class="form-control" style="background-color:wheat" autocomplete="new-password" aria-required="true" />
                <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
            </div>
            <br/>
            <button id="registerSubmit" type="submit" class="w-100 btn btn-lg btn-primary">Register</button>
        </form>
            <br/>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
