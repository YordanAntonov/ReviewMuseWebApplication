@page
@model LoginModel

@{
    ViewData["Title"] = "Log in";
}
<br />
<br />
<h1 class="row d-flex align-items-center justify-content-center text-center">@ViewData["Title"]</h1>
<div class="row text-center">
    <div class="col-md-6 col-md-offset-3">
        <section>
            <form id="account" method="post">
                <h2>Unlock a world of possibilities with a single click - login now!</h2>
                <hr />
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-floating mb-5">
                    <label asp-for="Input.Username" class="form-label"></label>
                    <input asp-for="Input.Username" class="form-control" style="background-color:wheat" autocomplete="email" aria-required="true" />
                    <span asp-validation-for="Input.Username" class="text-danger"></span>
                </div>
                <div class="form-floating mb-5">
                    <label asp-for="Input.Password" class="form-label"></label>
                    <input asp-for="Input.Password" class="form-control" style="background-color:wheat" autocomplete="current-password" aria-required="true" />
                    <span asp-validation-for="Input.Password" class="text-danger"></span>
                </div>
                <div>
                    <div class="checkbox">
                        <label asp-for="Input.RememberMe" class="form-label">
                            <input class="form-check-input" asp-for="Input.RememberMe" />
                            @Html.DisplayNameFor(m => m.Input.RememberMe)
                        </label>
                    </div>
                </div>
                <div>
                    <button id="login-submit" type="submit" class="w-100 btn btn-lg btn-primary">Log in</button>
                </div>
                <div>                  
                    <p>
                        <a asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl">Register as a new user</a>
                    </p>                  
                </div>
            </form>
        </section>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
